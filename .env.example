# Database
DATABASE_URL=postgresql://user:password@localhost:5432/findgrinds

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Stripe
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Webhook Secret
# Get this when you create a webhook endpoint in Stripe Dashboard
# For local testing, use Stripe CLI: stripe listen --forward-to localhost:3001/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Stripe Subscription Price IDs (create in Stripe Dashboard > Products)
# FREE tier needs no price — it's the default
# PROFESSIONAL = €19/month, ENTERPRISE = €99/month
STRIPE_PRICE_PROFESSIONAL=price_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ENTERPRISE=price_xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=info@findgrinds.ie
